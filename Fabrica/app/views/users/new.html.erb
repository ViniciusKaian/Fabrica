<%= stylesheet_link_tag "users" %>

<div class="content">

	<div class="cadastro">
		<h1>Cadastrar usuÃ¡rio</h1>

		<%= form_for(@user) do |f| %>
			<p><%= flash[:notice] %></p>
			<p>
				<%= f.label :name, :class => 'labels' %><br>
				<%= f.text_field :name, :class => 'text_field' %><br><br>
			</p>
			<p>
				<%= f.label :email, :class => 'labels' %><br>
				<%= f.text_field :email, :class => 'text_field' %><br><br>
			<p>
				<%= f.label :senha, :class => 'labels' %><br>
				<%= f.password_field :senha, :class => 'text_field' %><br><br>
			</p>
			<p> 
				<%= f.label :senha_confirmation, "Confirmar senha", :class => 'labels' %><br>
				<%= f.password_field :senha_confirmation, :class => 'text_field' %><br><br>
			</p>
			<p>
				<br><%= f.submit "Cadastrar", :class => 'submit_tag' %>
			</p>

			<p class="link"><%= link_to 'Login', login_path, :class => 'link' %></p>
		<% end %>
	
	</div>

</div>
